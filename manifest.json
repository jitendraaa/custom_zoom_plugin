{
    "manifest_version": 3,
    "name": "Custom Window Zoom",
    "version": "1.0",
    "description": "Control zoom levels independently for each window",
    "permissions": ["tabs", "activeTab", "storage", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  